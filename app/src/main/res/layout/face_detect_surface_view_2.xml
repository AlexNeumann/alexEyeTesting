                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_margin="4dp"
                android:background="@android:color/background_light"
                android:alpha="0.2" />

            <ImageView
                android:background="@android:color/background_light"
                android:id="@+id/a_1"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_margin="4dp"
                android:alpha="0.2"/>

            <ImageView
