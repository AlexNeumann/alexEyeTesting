                android:alpha="0.2"/>

            <ImageView
                android:background="@android:color/background_light"
                android:id="@+id/c_4"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_margin="4dp"
                android:alpha="0.2"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:background="@android:color/background_light"
                android:id="@+id/d_0"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_margin="4dp"
                android:alpha="0.2"/>

            <ImageView
                android:background="@android:color/background_light"
                android:id="@+id/d_1"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_margin="4dp"
                android:alpha="0.2"/>

            <ImageView
